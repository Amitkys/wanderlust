<% layout('./main.ejs') -%>
<div class="container-fluid" style="margin-top: 40px; margin-bottom: 60px;">
    <h1 class="text-center">All Registered Listings</h1>
    <hr>

    <div class="row g-lg-4 g-2"> <!-- Use larger gutters on large screens, smaller on small screens -->
        <% for(let listing of allListing) { %>
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                <a href="/listings/<%=listing.id%>" style="text-decoration: none; color: inherit;">
                    <div class="card listing-card h-100">
                        <img class="card-img-top" src="<%=listing.image%>" alt="listing image" style="height: 15rem; object-fit: cover;">
                        <div class="card-body">
                            <p class="card-text text-center">
                                <strong><%=listing.title %></strong><br>
                                <span>&#8377;</span> <%=listing.price.toLocaleString()%> /night
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>
